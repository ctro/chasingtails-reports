<h1>Listing users</h1>

<%= link_to 'New User', new_user_path %>
<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= mail_to user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
