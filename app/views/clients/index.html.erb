<h1>Listing clients</h1>

<%= link_to 'New Client', new_client_path %>
<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Dogs</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.name, client %></td>
        <td><%= mail_to client.email %></td>
        <td><%= client.address %></td>
        <td><%= dog_links(client) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
